@model UserProfileApplication.User

@{
    ViewBag.Title = "Details";
}

<div>
    <h4>User Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        @foreach (Card card in Model.Cards)
        {
            <dt>
                @Html.DisplayNameFor(model => card.CardNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => card.CardNumber)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => card.NameOnCard)
            </dt>

            <dd>
                @Html.DisplayFor(model => card.NameOnCard)
            </dd>
        }



    </dl>
</div>
<p>
    @Html.ActionLink("Add Card", "Create","Cards") |
    @Html.ActionLink("Edit", "Edit", new { id = Model.UserId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
